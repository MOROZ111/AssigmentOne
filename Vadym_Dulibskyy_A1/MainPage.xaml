<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="Vadym_Dulibskyy_A1.MainPage">    <ScrollView>        <VerticalStackLayout>            <VerticalStackLayout            Spacing="25"            Margin="0,30"            Padding="30,0"            VerticalOptions="CenterAndExpand"            HorizontalOptions="Center">                <HorizontalStackLayout                Spacing="10"                HorizontalOptions="CenterAndExpand">                    <Border                    StrokeShape="RoundRectangle 10,10,10,10"                    WidthRequest="70"                    HeightRequest="70">                                          </Border>                    <Border                    StrokeShape="RoundRectangle 10,10,10,10"                    WidthRequest="70"                    HeightRequest="70">                        <Label                    x:Name="LetterLabel2"                    FontSize="30"                    VerticalTextAlignment="Center"                    HorizontalTextAlignment="Center"                    BackgroundColor="Gray"                    TextColor="White"                    />                    </Border>                    <Border                    StrokeShape="RoundRectangle 10,10,10,10"                    WidthRequest="70"                    HeightRequest="70"                    >                        <Label                    x:Name="LetterLabel3"                    FontSize="30"                    VerticalTextAlignment="Center"                    HorizontalTextAlignment="Center"                    TextColor="White"                    BackgroundColor="Gray"                    />                    </Border>                    <Border                    StrokeShape="RoundRectangle 10,10,10,10"                    WidthRequest="70"                    HeightRequest="70">                        <Label                    x:Name="LetterLabel4"                    FontSize="30"                                       VerticalTextAlignment="Center"                    HorizontalTextAlignment="Center"                    TextColor="White"                    BackgroundColor="Gray"                    />                    </Border>                    <Border                    StrokeShape="RoundRectangle 10,10,10,10"                    WidthRequest="70"                    HeightRequest="70">                        <Label                    x:Name="LetterLabel5"                    FontSize="30"                                       VerticalTextAlignment="Center"                    HorizontalTextAlignment="Center"                    TextColor="White"                    BackgroundColor="Gray"                    />                    </Border>                </HorizontalStackLayout>                <HorizontalStackLayout                Spacing="20"                    Margin="0,30"                    HorizontalOptions="CenterAndExpand" >                    <Entry                x:Name="WordEntry"                Placeholder="Enter a word"                WidthRequest="200"                FontSize="25"                        Text=""                />                    <Button                x:Name="CheckButton"                Text="Check Word"                FontSize="25"                Clicked="CheckButton_Clicked"                HorizontalOptions="Center" />                </HorizontalStackLayout>            </VerticalStackLayout>            <HorizontalStackLayout                Margin="0,150"                HorizontalOptions="CenterAndExpand"                VerticalOptions="EndAndExpand">                <Button                Margin="10"                FontSize="20"                WidthRequest="100"                Text="Answer" />                <Button                Margin="10"                FontSize="20"                WidthRequest="100"                Text="Hint" />                <Button                Margin="10"                FontSize="20"                WidthRequest="100"                Text="Stats" />            </HorizontalStackLayout>        </VerticalStackLayout>    </ScrollView></ContentPage>